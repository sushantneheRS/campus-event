{
  "name": "campus-event-backend",
  "version": "1.0.0",
  "description": "Backend API for Campus Event Management & Notification System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:server": "node test-server.js",
    "seed": "node utils/seedDatabase.js",
    "seed:events": "node utils/createSampleEvents.js",
    "seed:registrations": "node utils/createSampleRegistrations.js",
    "seed:organizer": "node utils/createOrganizerData.js",
    "check": "node utils/checkDependencies.js",
    "setup": "npm run check && npm run seed && npm run seed:events && npm run seed:registrations"
  },
  "keywords": [
    "campus",
    "event",
    "management",
    "notification",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Campus Event Management Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "sharp": "^0.32.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
